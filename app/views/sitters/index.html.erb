<article class="content items-list-page">
  <div class="title-search-block">
    <div class="title-block">
      <div class="row">
        <div class="col-md-6">
          <h3 class="title">
            Sitters
            <a href="/sitters/new" class="btn btn-primary btn-sm rounded-s">
              Add New
            </a>
          </h3>
        </div>
      </div>
    </div>
  </div>
    <div class="row">
      <div class="col-md-8">
        <div class="card">
        <table class="table ">
          <thead>
            <tr>
              <th>Name</th>
              <th>Phone</th>
              <th>Email</th>
            </tr>
          </thead>
          <tbody>
            <% @sitters.each do |sitter| %>
              <tr>
                <td><%= link_to sitter.name, sitter %></td>
                <td><%= sitter.phone %></td>
                <td><%= sitter.email %></td>
                <td>
                  <%= button_to "delete", sitter_path(sitter), method: :delete, class: "btn btn-sm btn-danger-outline" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</article>
